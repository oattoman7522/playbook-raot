- name: Prerequisite software the lastest version
  ansible.builtin.yum:
    name: 
    - perl-Digest-SHA 
    - telnet
    - net-tools 
    state: latest

- name: computing SHA message digest
  ansible.builtin.shell:
    cmd: shasum -a 512 /tmp/metricbeat-8.12.1-x86_64.rpm


- name: Get Metricbeat Package version 8.12.1
  ansible.builtin.shell:
    src:  /root/playbook-raot/roles/Metricbeat/templates/metricbeat-8.12.1-x86_64.rpm.j2 
    dest: /tmp/metricbeat-8.12.1-x86_64.rpm
    cmd: sudo rpm -vi /tmp/metricbeat-8.12.1-x86_64.rpm


